<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context="com.example.prajwalm.popularmovies.DetailsActivity"
android:id="@+id/parent"
android:background="@android:color/white">

<TextView
    android:id="@+id/fav_title"
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/holo_green_dark"
    android:fontFamily="monospace"
    android:padding="10dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Title"
    android:textColor="@color/colorText"
    android:textSize="30sp"
    android:textStyle="bold"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Minions" />


<ImageView
    android:id="@+id/fav_image"
    android:layout_width="0dp"
    android:layout_height="200dp"
    android:contentDescription="@string/contentDescription"
    android:padding="10dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/fav_title"
    app:layout_constraintLeft_toLeftOf="parent" />

<TextView
    android:id="@+id/fav_summary"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:fontFamily="monospace"
    android:padding="10dp"
    android:textColor="@color/colorText"

    android:textSize="15sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/fav_image"
    tools:text="Overview" />

<TextView
    android:id="@+id/fav_voteAverage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/holo_green_light"


    android:fontFamily="monospace"
    android:padding="10dp"
    android:textColor="@color/colorText"
    android:textSize="15sp"
    app:layout_constraintRight_toRightOf="parent"
    tools:text="UserRating"
    app:layout_constraintTop_toTopOf="@+id/fav_image" />

<TextView
    android:id="@+id/fav_releaseDate"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="16dp"
    android:fontFamily="monospace"
    android:background="@android:color/holo_green_light"


    android:padding="10dp"
    android:textColor="@color/colorText"
    android:textSize="15sp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/fav_voteAverage"
    tools:text="releaseDate" />
</android.support.constraint.ConstraintLayout>